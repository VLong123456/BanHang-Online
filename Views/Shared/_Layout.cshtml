<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title> Bán Hàng Online </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BanHang_Online.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/node_modules/bootstrap-icons/font/bootstrap-icons.css" />
    
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark po position-relative ">
            <div class="container-fluid">
                <span class="navbar-brand user-select-none " > Bán Hàng Online </span>
                @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
                <div class="collapse navbar-collapse " id="navbarCollapse">

                    <ul class="navbar-nav me-auto mb-2 mb-md-0">

                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Home" asp-action="Index"> Trang Chủ </a>
                        </li>

                        <li class="nav-item dropdown ">
                            <a class="nav-link  dropdown-toggle  " role="button" data-bs-toggle="dropdown" asp-controller="Home" asp-action="Privacy"> Sản Phẩm </a>
                            <ul class="dropdown-menu dropdown-menu-dark  " >

                                <li><a class="dropdown-item" asp-controller="SanPham" asp-action="SanPhamDiDong" > Thiết Bị Di Động </a> </li>

                                <li><a class="dropdown-item" asp-controller="SanPham" asp-action="SanPhamMayTinh" > Thiết Bị Máy Tính </a> </li>

                                <li><a class="dropdown-item" asp-controller="SanPham" asp-action="SanPhamPhanMem" > Phẩn Mềm Thiết Bị </a> </li>

                            </ul>
                        </li>
                        <li class="nav-item  dropdown ">
                            <a class="nav-link dropdown-toggle " role="button" data-bs-toggle="dropdown" asp-controller="Home" asp-action="Index"> Chính Sách  </a>
                                
                                <ul class="dropdown-menu dropdown-menu-dark ">
                                    
                                    <li><a class="dropdown-item" asp-controller="ChinhSach" asp-action="ChinhSachBaoHanh"> Chính Sách Bảo Hành </a> </li>

                                    <li><a class="dropdown-item" asp-controller="ChinhSach" asp-action="ChinhSachThanhToan"> Chính Sách Thanh Toán </a> </li>
                                    
                                    <li><a class="dropdown-item" asp-controller="ChinhSach" asp-action="ChinhSachBaoMat"> Chính Sách Bảo Mật </a> </li>
                            
                                </ul>

                        </li>

                        <li class="nav-item">
                            <a class="nav-link " asp-controller="GioiThieu" asp-action="GioiThieu"> Giới Thiệu </a>
                        </li>
                    </ul>

                    <form class="d-flex" role="search" >
                        <input name="q" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button  class="btn btn-outline-info " type="submit"> Search </button>
                    </form>
                    
                    <ul class="navbar-nav mx-md-3 ">
                        <li class="nav-item dropdown ">
                            <a class="nav-link  text-success " role="button" data-bs-toggle="dropdown" asp-controller="NguoiDung" asp-action="DangNhap"> 
                                Login/Sign
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark " >

                                <li><a class="dropdown-item" asp-controller="NguoiDung" asp-action="DangNhap" > Đăng Nhập </a> </li>

                                <li><a class="dropdown-item" asp-controller="NguoiDung" asp-action="DangKy" > Đăng Ký </a> </li>

                                <li><a class="dropdown-item" asp-controller="NguoiDung" asp-action="GioHang" > Giỏ Hàng </a> </li>

                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <div role="main ">

            @RenderBody()

        </div>
    </div>

    <footer class="border-top footer text-muted position-relative ">
        <div class="container ">
            &copy; 2022 - BanHangOnl - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/bootstrap-5.2.3-examples/checkout/form-validation.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
