


@{
    ViewData["Title"] = " Đăng Nhập ";
}



<h3>@ViewData["Title"]</h3>

<style>
    .center-Login{
        width: 25%;
        margin: 5rem auto auto ;
    }
    .img-Login{
        position: relative;
        left: 50%;
        transform: translateX(-50%);
    }
</style>

@* <link rel="stylesheet" href="~/bootstrap-5.2.3-examples/sign-in/signin.css"> *@

<div class="center-Login">
    <main class="container" > 
        <form>
            <img class="mb-4 img-Login " src="../assets/brand/bootstrap-logo.svg" alt="" width="100" height="75">
            <h1 class="h3 mb-3 fw-normal"> Đăng Nhập </h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput"> Số Điện Thoại </label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword"> Mật Khẩu </label>
            </div>
                <hr>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Nhớ Tôi
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit"> Đăng Nhập </button>
                <hr>
            <span>
                &copy; Chưa Có Tài Khoản: 
                <a class="text-decoration-none" asp-controller="NguoiDung" asp-action="DangKy" > Đăng Ký Ngay </a>
            </span>
            <p class="mt-5 mb-3 text-muted">&copy; 2017–2022</p>
        </form>
    </main>
</div>
