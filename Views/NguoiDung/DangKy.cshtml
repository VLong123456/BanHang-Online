


@{
    ViewData["Title"] = " Đăng Ký ";
}

<h3>@ViewData["Title"]</h3>

<style>
    .btn-mb-1{
        margin-bottom: 1rem;
    }
    .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
    }

    @* @media (min-width: 768px) {
    .bd-placeholder-img-lg {
        font-size: 3.5rem;
    }
    } *@

    .b-example-divider {
    height: 3rem;
    background-color: rgba(0, 0, 0, .1);
    border: solid rgba(0, 0, 0, .15);
    border-width: 1px 0;
    box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
    }

    .b-example-vr {
    flex-shrink: 0;
    width: 1.5rem;
    height: 100vh;
    }

    .bi {
    vertical-align: -.125em;
    fill: currentColor;
    }

    .nav-scroller {
    position: relative;
    z-index: 2;
    height: 2.75rem;
    overflow-y: hidden;
    }

    .nav-scroller .nav {
    display: flex;
    flex-wrap: nowrap;
    padding-bottom: 1rem;
    margin-top: -1px;
    overflow-x: auto;
    text-align: center;
    white-space: nowrap;
    -webkit-overflow-scrolling: touch;
    }
</style>

<link rel="stylesheet" href="~/bootstrap-5.2.3-examples/checkout/form-validation.css">

<main class="container ">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="../assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
        <h2> Đăng Ký Tài Khoản </h2>
        <p class="lead"> Noi Dung </p>
    </div>

    <div class="row g-5 ">    
        <div class=" mx-auto">
            <h4 class="mb-3"> Nhập Thông Tin Đăng Ký </h4>
            <form class="needs-validation" novalidate>
                <div class="row g-3">
                <div class="col-sm-6">
                    <label for="firstName" class="form-label"> Họ </label>
                    <input type="text" class="form-control" id="firstName" placeholder=" Nguyễn, Hoàng, Ngô, ... " value="" required>
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>

                <div class="col-sm-6">
                    <label for="lastName" class="form-label"> Tên </label>
                    <input type="text" class="form-control" id="lastName" placeholder=" Trung, Thịnh, Đức, ... " value="" required>
                    <div class="invalid-feedback">
                    Valid last name is required.
                    </div>
                </div>

                <div class="col-6">
                    <label for="address2" class="form-label"> Ngày Sinh </label>
                    <input type="text" class="form-control" id="address2" placeholder=" Ngày Sinh ">
                </div>

                <div class="col-3">
                    <label for="address2" class="form-label"> Giới Tính </label>
                    <div class="input-group has-validation">
                        <span class="input-group-text"></span>
                        <input type="text" class="form-control" id="address2" placeholder=" Giới Tính " >
                    </div>
                </div>

                <div class="col-6">
                    <label for="address2" class="form-label"> CMNDD/CCCD </label>
                    <input type="text" class="form-control" id="address2" placeholder="CMNDD/CCCD">
                </div>

                <div class="col-6">
                    <label for="username" class="form-label"> Số Điện Thoại </label>
                    <div class="input-group has-validation">
                        @* <span class="input-group-text"></span> *@
                        <input type="text" class="form-control" id="numberphone" placeholder=" Số Điện Thoại " required>
                    <div class="invalid-feedback">
                        Your username is required.
                    </div>
                    </div>
                </div>

                <div class="col-12">
                    <label for="email" class="form-label">Email <span class="text-muted"> (Optional) </span> </label>
                    <input type="email" class="form-control" id="email" placeholder="abc123@Gmail.com">
                    <div class="invalid-feedback">
                    Please enter a valid email address for shipping updates.
                    </div>
                </div>

                <div class="col-12">
                    <label for="address" class="form-label"> Địa Chỉ </label>
                    <input type="text" class="form-control" id="address" placeholder="Số Nhà, Đường, Thành Phố, ..." required>
                    <div class="invalid-feedback">
                    Please enter your shipping address.
                    </div>
                </div>

            </div>

            <hr class="my-4">

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="same-address">
                <label class="form-check-label" for="same-address"> Tôi đã đọc và đồng ý với diều khoản người dùng </label>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="save-info">
                <label class="form-check-label" for="save-info"> Tôi cam kết mọi thông tin trên là đúng </label>
            </div>


            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg btn-mb-1" type="submit"> Đăng Ký Ngay </button>
        </form>

        </div>
    </div>

</main>

<script src="~/bootstrap-5.2.3-examples/checkout/form-validation.js"></script>